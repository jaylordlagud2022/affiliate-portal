import { useState } from "react";
import { MessageSquare } from "lucide-react"; // chat icon
import ChatWindow from "./ChatWindow";

const ChatWidget = ({ receiverId }: { receiverId: string }) => {
  const [open, setOpen] = useState(false);

  return (
    <div
      className="fixed bottom-6 right-6"
      style={{ zIndex: 9999 }} // ðŸ‘ˆ force it to stay on top
    >
      {/* Floating button */}
      <button
        onClick={() => setOpen(!open)}
        className="bg-blue-600 text-white p-4 rounded-full shadow-lg hover:bg-blue-700 transition"
      >
        <MessageSquare size={24} />
      </button>

      {/* Chat window */}
      {open && (
        <div className="fixed bottom-20 right-6 w-80 h-96 bg-white shadow-xl rounded-lg border flex flex-col"
            style={{ zIndex: 9999 }} // ðŸ‘ˆ also apply to window
        >
          <ChatWindow receiverId={receiverId} onClose={() => setOpen(false)} />
        </div>
      )}
    </div>

  );
};

export default ChatWidget;
